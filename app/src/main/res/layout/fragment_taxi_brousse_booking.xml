<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:spacing="8dp">

            <TextView
                android:id="@+id/tvRoute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Antananarivo → Mahajanga"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDepartureTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Départ : 08:00" />

            <TextView
                android:id="@+id/tvArrivalTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Arrivée : 16:00" />

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20 000 Ar" />

            <TextView
                android:id="@+id/tvVehicleType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sprinter" />

            <EditText
                android:id="@+id/etPassengerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nom du passager" />

            <EditText
                android:id="@+id/etPassengerPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Téléphone du passager"
                android:inputType="phone" />

            <EditText
                android:id="@+id/etSeatNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Numéro de siège"
                android:inputType="number" />

            <EditText
                android:id="@+id/etTravelDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date de voyage (yyyy-MM-dd)" />

            <Button
                android:id="@+id/btnConfirmBooking"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirmer la réservation" />
        </LinearLayout>
    </ScrollView>
</layout>
