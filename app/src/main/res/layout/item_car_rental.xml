<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_car_rental"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/iv_car_image"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/car_image" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingLeft="12dp">

            <TextView
                android:id="@+id/tv_brand_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toyota Corolla"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_car_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150 000 Ar/jour"
                android:textAppearance="?attr/textAppearanceBody1"
                android:textColor="#FF5722"
                android:paddingTop="4dp" />

            <TextView
                android:id="@+id/tv_transmission"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Automatique"
                android:textAppearance="?attr/textAppearanceBody2"
                android:paddingTop="2dp" />

            <TextView
                android:id="@+id/tv_seats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 places"
                android:textAppearance="?attr/textAppearanceBody2"
                android:paddingTop="2dp" />

            <TextView
                android:id="@+id/tv_car_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â˜… 4.5"
                android:textAppearance="?attr/textAppearanceBody2"
                android:paddingTop="2dp" />

            <TextView
                android:id="@+id/tv_rental_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rental Company"
                android:textAppearance="?attr/textAppearanceCaption"
                android:textColor="#888888"
                android:paddingTop="4dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
